{
    "name": "Google Domain Checker",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Checks if the current domain includes google.com",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "images/icon-128.png",
        "default_title": "Check Domain",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    }
}